{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2023",
    "outDir": "out",
    "lib": ["ES2023", "dom", "dom.iterable", "webworker"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "alwaysStrict": true,
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    },
    "jsx": "react-jsx",
    "types": ["jest", "mocha", "node"],
    "typeRoots": [
      //"typings",
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules", ".vscode-test", "out", "dist", "test", "src/**/*.test.ts", "**/__mocks__"]
}
