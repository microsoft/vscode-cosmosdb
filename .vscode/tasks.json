{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "Watch",
            "dependsOn": ["watch:ext", "watch:views"]
        },
        {
            "label": "watch:ext",
            "type": "npm",
            "script": "watch:ext",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "group": "cosmosdb-vscode-extension"
            }
        },
        {
            "label": "watch:views",
            "type": "npm",
            "script": "watch:views",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "group": "cosmosdb-vscode-extension"
            }
        },
        {
            "label": "Watch_Extension_and_Webviews",
            "dependsOn": ["watch.extension", "watch:views"]
        },
        {
            "label": "watch.extension",
            "type": "npm",
            "script": "watch.extension",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$tsc-watch", "$ts-webpack-watch", "$tslint-webpack-watch"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "group": "Cosmos DB Extension Watch"
            }
        },
        {
            "label": "watch:views",
            "type": "npm",
            "script": "watch:views",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "group": "Cosmos DB Extension Watch"
            }
        }
    ]
}
