{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "rootDir": ".",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        },
        "skipLibCheck": true // https://github.com/Azure/ms-rest-js/issues/367
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts"
    ]
}
