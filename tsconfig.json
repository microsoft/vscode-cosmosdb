{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "outDir": "out",
        "lib": ["ES2021", "dom", "dom.iterable", "webworker"],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true, // added by tnaum to fix SlickGrid integration, eager to discuss other approaches
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "rootDir": ".",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "paths": {
            "*": ["node_modules/@types/*", "*"]
        },
        "jsx": "react-jsx"
    },
    "exclude": ["node_modules", ".vscode-test", "gulpfile.ts"]
}
